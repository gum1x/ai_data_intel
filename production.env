# Production Environment Configuration for AI Intelligence System
# Copy this file to .env and update with your actual values

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
RUST_LOG=info
RUST_BACKTRACE=1
ENVIRONMENT=production
DEBUG=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database
DATABASE_URL=postgresql://intelligence:your_secure_password@localhost:5432/intelligence
POSTGRES_DB=intelligence
POSTGRES_USER=intelligence
POSTGRES_PASSWORD=your_secure_password

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Configuration (MUST be 32+ characters)
JWT_SECRET=your_super_secret_jwt_key_must_be_32_chars_minimum_length
JWT_EXPIRY_HOURS=24

# Encryption Key (MUST be 32 characters)
ENCRYPTION_KEY=your_super_secret_encryption_key_32_chars

# API Security
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_SECONDS=3600
ENABLE_AUDIT_LOGGING=true

# =============================================================================
# AI PROVIDER API KEYS
# =============================================================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4000
ANTHROPIC_TEMPERATURE=0.7

# Google Gemini
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro
GOOGLE_MAX_TOKENS=4000
GOOGLE_TEMPERATURE=0.7

# Hugging Face
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=microsoft/DialoGPT-medium

# Cohere
COHERE_API_KEY=your_cohere_api_key_here
COHERE_MODEL=command

# Together AI
TOGETHER_API_KEY=your_together_api_key_here
TOGETHER_MODEL=meta-llama/Llama-2-7b-chat-hf

# =============================================================================
# TELEGRAM CONFIGURATION
# =============================================================================
# Telegram Bot API (limited access)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Client API (full access - can join private channels)
TELEGRAM_API_ID=12345
TELEGRAM_API_HASH=your_telegram_api_hash_here
TELEGRAM_PHONE_NUMBER=+1234567890
TELEGRAM_SESSION_STRING=your_session_string_here
TELEGRAM_USE_TEST_DC=false

# Collection Settings
TELEGRAM_MAX_CONCURRENT_SESSIONS=5
TELEGRAM_RATE_LIMIT_PER_SECOND=30
TELEGRAM_BATCH_SIZE=1000
TELEGRAM_COLLECTION_TIMEOUT_SECONDS=300

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
# Ethereum
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_project_id
ETHEREUM_CHAIN_ID=1
ETHEREUM_ENABLED=true

# Polygon
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your_infura_project_id
POLYGON_CHAIN_ID=137
POLYGON_ENABLED=true

# BSC (Binance Smart Chain)
BSC_RPC_URL=https://bsc-dataseed.binance.org/
BSC_CHAIN_ID=56
BSC_ENABLED=true

# IPFS Configuration
IPFS_NODE_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=intelligence-system
KAFKA_AUTO_OFFSET_RESET=latest
KAFKA_ENABLE_AUTO_COMMIT=true
KAFKA_SESSION_TIMEOUT_MS=30000
KAFKA_HEARTBEAT_INTERVAL_MS=3000
KAFKA_MAX_POLL_INTERVAL_MS=300000

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Prometheus
PROMETHEUS_ENDPOINT=http://localhost:9090
PROMETHEUS_PORT=9090

# Jaeger Tracing
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Grafana
GRAFANA_URL=http://localhost:3000
GRAFANA_ADMIN_PASSWORD=admin

# =============================================================================
# ELASTICSEARCH CONFIGURATION
# =============================================================================
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=ai_intel
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_WORKERS=4
SERVER_MAX_CONNECTIONS=1000
SERVER_TIMEOUT_SECONDS=30
SERVER_ENABLE_CORS=true
SERVER_CORS_ORIGINS=*

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_PROCESSING_INTERVAL_SECONDS=60
ANALYTICS_ENABLE_REAL_TIME=true
ANALYTICS_MAX_MEMORY_USAGE_MB=8192
ANALYTICS_CPU_LIMIT_PERCENT=80.0
ANALYTICS_ENABLE_PARALLEL_PROCESSING=true
ANALYTICS_ENABLE_DISTRIBUTED_PROCESSING=true
ANALYTICS_CHUNK_SIZE=1000
ANALYTICS_MAX_RETRIES=3
ANALYTICS_RETRY_DELAY_SECONDS=5

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
AGENTS_MAX_CONCURRENT_AGENTS=10
AGENTS_AGENT_TIMEOUT_SECONDS=300
AGENTS_COMMUNICATION_TIMEOUT_SECONDS=30
AGENTS_RETRY_ATTEMPTS=3
AGENTS_RETRY_DELAY_SECONDS=5

# =============================================================================
# PROFILE ANALYSIS CONFIGURATION
# =============================================================================
PROFILE_ANALYSIS_NFT_ENABLED=true
PROFILE_ANALYSIS_NFT_CHAINS=ethereum,polygon
PROFILE_ANALYSIS_NFT_REFRESH_INTERVAL=3600
PROFILE_ANALYSIS_CHANNEL_LINKS_ENABLED=true
PROFILE_ANALYSIS_CHANNEL_LINKS_MAX_DEPTH=3
PROFILE_ANALYSIS_CHANNEL_LINKS_CACHE_DURATION=86400
PROFILE_ANALYSIS_MUTUAL_CHANNELS_ENABLED=true
PROFILE_ANALYSIS_MUTUAL_CHANNELS_MIN_CONNECTIONS=2
PROFILE_ANALYSIS_MUTUAL_CHANNELS_SIGNIFICANCE_THRESHOLD=0.5

# =============================================================================
# THREAT INTELLIGENCE CONFIGURATION
# =============================================================================
THREAT_INTELLIGENCE_OSINT_ENABLED=true
THREAT_INTELLIGENCE_BLOCKCHAIN_EXPLORER_ENABLED=true
THREAT_INTELLIGENCE_SOCIAL_MEDIA_INTEL_ENABLED=true
THREAT_INTELLIGENCE_DARK_WEB_MONITOR_ENABLED=false
THREAT_INTELLIGENCE_RISK_ASSESSMENT_LOW_THRESHOLD=0.3
THREAT_INTELLIGENCE_RISK_ASSESSMENT_MEDIUM_THRESHOLD=0.6
THREAT_INTELLIGENCE_RISK_ASSESSMENT_HIGH_THRESHOLD=0.8

# =============================================================================
# API ENDPOINTS CONFIGURATION
# =============================================================================
API_ENABLED=true
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW_SECONDS=60
API_CORS_ENABLED=true
API_CORS_ORIGINS=*

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# S3 Configuration (if using S3 for storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your_s3_bucket_name

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your_backup_s3_bucket

# =============================================================================
# DEVELOPMENT/DEBUG CONFIGURATION
# =============================================================================
# Only set these in development
# RUST_LOG=debug
# RUST_BACKTRACE=full
# DEBUG=true
